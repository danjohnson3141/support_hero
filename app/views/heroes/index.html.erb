<p id="notice"><%= notice %></p>

<h1>Listing Heroes</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Bio</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heroes.each do |hero| %>
      <tr>
        <td><%= hero.first_name %></td>
        <td><%= hero.last_name %></td>
        <td><%= hero.title %></td>
        <td><%= hero.bio %></td>
        <td><%= hero.created_by %></td>
        <td><%= hero.updated_by %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

